<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/layinfor"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#FF82AB" >

        <ImageView
            android:id="@+id/myImg"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:background="#000000"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/myNickname"
            android:layout_width="wrap_content"
            android:layout_height="22dip"
            android:layout_toRightOf="@id/myImg"
             />

        <TextView
            android:id="@+id/TimeV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/myNickname"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@id/myImg"
            android:text="aaaaaaaa" />

           <RelativeLayout
            android:id="@+id/imgbtn"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dip" >
      
            <Button
                android:id="@+id/CoB"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="#FF82AB"
                android:text="Back"
                android:layout_toRightOf="@id/TimeV"
                />

            <ImageView
                android:id="@+id/CoI"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:scaleType="fitStart"
                android:src="@drawable/attitude_love2" />
        </RelativeLayout> 
    </RelativeLayout>
 
    

    <TextView
        android:id="@+id/tvItem"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layinfor"     
        android:gravity="left|center_vertical"
        android:padding="4dip"
        android:textColor="#000000">
        
    </TextView>
     

  <RelativeLayout
        android:id="@+id/laybtns"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#FF82AB"
        android:layout_alignParentBottom="true" 
        android:layout_below="@id/tvItem">
        <Button 
             android:id="@+id/ZF"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="#F0FFF0"
                android:text="转发"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dip"/>
        <Button 
             android:id="@+id/PL"
             android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="#F0FFF0"
                android:text="评论"
                android:layout_toRightOf="@id/ZF"
                android:layout_marginLeft="20dip"
            />
         
    </RelativeLayout>

</RelativeLayout>